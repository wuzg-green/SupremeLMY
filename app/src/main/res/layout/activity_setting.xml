<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#199793"
        android:navigationIcon="@drawable/ic_back_baijiantou"
        app:navigationIcon="@drawable/ic_back_baijiantou">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_sa_rl_bg"
        android:descendantFocusability="blocksDescendants"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp">

        <FrameLayout
            android:id="@+id/fl_update_photo"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/mask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A000" />

            <com.zondy.jwt.jwtmobile.ui.ProgressPieView
                android:layout_margin="5dp"
                android:id="@+id/civ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="#FFF"
                app:ppvBackgroundColor="#AAA"
                app:ppvProgress="0"
                app:ppvProgressColor="#DDD"
                app:ppvStrokeColor="#FFF"
                app:ppvStrokeWidth="1dp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fl_update_photo"
            android:gravity="left|center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喻文杰"
                android:textColor="@color/gray_color_3"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_jh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="081473"
                android:textColor="@color/gray_color_3"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_next_step_selected"
            android:paddingRight="20dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_caiji_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_sa_rl_bg"
        android:drawableLeft="@drawable/ic_setting_caiji"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_next_step_selected"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="采集信息"
        android:textColor="@color/gray_color_3"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f3f3f3"></RelativeLayout>

    <TextView
        android:id="@+id/tv_about_jwt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_sa_rl_bg"
        android:drawableLeft="@drawable/ic_setting_about_jwt"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_next_step_selected"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="关于警务通"
        android:textColor="@color/gray_color_3"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_mpush"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_sa_rl_bg"
        android:drawableLeft="@drawable/ic_setting_about_jwt"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_next_step_selected"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="登陆mpush"
        android:textColor="@color/gray_color_3"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_check_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_sa_rl_bg"
        android:drawableLeft="@drawable/ic_setting_about_jwt"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_next_step_selected"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="检查更新"
        android:textColor="@color/gray_color_3"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_update_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_sa_rl_bg"
        android:drawableLeft="@drawable/ic_setting_about_jwt"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_next_step_selected"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="修改密码"
        android:textColor="@color/gray_color_3"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_sa_rl_bg"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="退出登录"
        android:textColor="#FF3030"
        android:textSize="15sp" />

</LinearLayout>